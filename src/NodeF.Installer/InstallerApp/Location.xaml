<Page x:Class="InstallerApp.Location"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstallerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Location">

    <StackPanel>
        <Label>Server IP address</Label>
        <TextBox Text="{Binding Path=IP, Mode=TwoWay}" />
        <Label>Server user name</Label>
        <TextBox Text="{Binding Path=User, Mode=TwoWay}" />
        <Label>SSH Private Key</Label>
        <TextBox Text="{Binding Path=SSHPrivateKey, Mode=TwoWay}" />
    </StackPanel>
</Page>
