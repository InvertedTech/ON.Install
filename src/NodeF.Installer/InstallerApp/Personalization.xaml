<Page x:Class="InstallerApp.Personalization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstallerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel>
        <Label>Website Name</Label>
        <TextBox Text="{Binding Path=Name, Mode=TwoWay}" />
        <Label>Description</Label>
        <TextBox Text="{Binding Path=Description, Mode=TwoWay}" />
        <Label>Keywords (separated by commas)</Label>
        <TextBox Text="{Binding Path=KeywordsWithCommas, Mode=TwoWay}" />
    </StackPanel>
</Page>
