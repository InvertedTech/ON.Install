@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<form asp-action="Index" method="post" class="needs-validation" novalidate>
 <h2 style="color:red;">@Model?.ErrorMessage</h2>
 <div class="form-group">
  <label asp-for="LoginName"></label>
  <input class="form-control" asp-for="LoginName" />
  <span asp-validation-for="LoginName"></span>
 </div>
 <div class="form-group">
  <label asp-for="Password"></label>
  <input class="form-control" asp-for="Password" />
  <span asp-validation-for="Password"></span>
 </div>

 <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts
{
<partial name="_ValidationScriptsPartial" />
}
