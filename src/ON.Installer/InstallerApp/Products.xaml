<Page x:Class="InstallerApp.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstallerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductSelection">

    <StackPanel>
        <Label>Site Type</Label>
        <ComboBox Name="cbHomepage" SelectionChanged="cbHomepage_Changed">
            <ComboBoxItem DataContext="0">CMS / Creator</ComboBoxItem>
            <ComboBoxItem DataContext="1">Small Business Page</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Page>
