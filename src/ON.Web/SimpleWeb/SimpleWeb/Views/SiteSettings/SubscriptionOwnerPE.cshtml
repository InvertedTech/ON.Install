@using ON.Fragments.Authorization.Payments.ParallelEconomy
@model ParallelEconomySettings

<li class="list-group-item">
    <h2>Parallel Economy Settings</h2>
    <form method="post" class="needs-validation" novalidate asp-action="ModifySubscriptionOwnerPE">
        <div class="form-group">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Enabled" />
                <label class="form-check-label" asp-for="Enabled"></label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Url"></label>
            <input class="form-control" asp-for="Url" />
        </div>
        <div class="form-group">
            <label asp-for="UserId">User Id</label>
            <input class="form-control" asp-for="UserId" />
        </div>
        <div class="form-group">
            <label asp-for="UserApiKey">User Api Key</label>
            <input class="form-control" asp-for="UserApiKey" />
        </div>
        <div class="form-group">
            <label asp-for="LocationId">Location Id</label>
            <input class="form-control" asp-for="LocationId" />
        </div>
        <div class="form-group">
            <label asp-for="ProductId">Product Id</label>
            <input class="form-control" asp-for="ProductId" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</li>
