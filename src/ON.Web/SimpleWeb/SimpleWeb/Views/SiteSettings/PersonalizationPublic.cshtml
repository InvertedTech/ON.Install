@using ON.Fragments.Settings
@model PersonalizationPublicRecord

<li class="list-group-item">
    <h2>Public Settings</h2>
    <form method="post" class="needs-validation" novalidate asp-action="ModifyPersonalizationPublic">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="MetaDescription">Meta Description</label>
            <input class="form-control" asp-for="MetaDescription" />
            <span asp-validation-for="MetaDescription"></span>
        </div>
        <div class="form-group">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="DefaultToDarkMode" />
                <label class="form-check-label" asp-for="DefaultToDarkMode">Default to Dark Mode</label>
            </div>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</li>
